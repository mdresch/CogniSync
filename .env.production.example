# CogniSync Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your-super-secure-postgres-password-here
NEO4J_PASSWORD=your-super-secure-neo4j-password-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-64-chars-min
API_KEY_SALT=your-api-key-salt-change-this-in-production-32-chars-min

# =============================================================================
# API KEYS FOR INTER-SERVICE COMMUNICATION
# =============================================================================
# Generate these with: openssl rand -hex 32
ATLASSIAN_SYNC_API_KEYS=AS-SYNC-PROD-KEY-1234567890abcdef,AS-SYNC-BACKUP-KEY-fedcba0987654321
KG_API_KEY=KG-PROD-KEY-1234567890abcdef1234567890abcdef

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-organization-id-here

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=cognisync-production-embeddings

# Neo4j Configuration (if using Neo4j AuraDB instead of local)
NEO4J_URI=neo4j+s://your-auradb-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j

# Azure Service Bus Configuration
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# =============================================================================
# CORS AND DOMAIN CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# =============================================================================
# OPTIONAL: EXTERNAL DATABASE URLS (if not using Docker PostgreSQL)
# =============================================================================
# ATLASSIAN_DATABASE_URL=postgresql://username:password@your-db-host:5432/atlassian_sync
# KG_DATABASE_URL=postgresql://username:password@your-db-host:5432/knowledge_graph
# RAG_DATABASE_URL=postgresql://username:password@your-db-host:5432/llm_rag

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=info

# Application Insights (Azure)
# APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# CloudWatch (AWS)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Database connection pool settings
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_TIMEOUT=30000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================
# S3 Backup Configuration (optional)
# AWS_S3_BACKUP_BUCKET=cognisync-backups
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# FEATURE FLAGS
# =============================================================================
TENANT_ISOLATION_ENABLED=true
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_TRACING=false