{
  "name": "cogni-sync-services",
  "private": true,
  "workspaces": [
    "atlassian-sync-service",
    "cogni-sync-client",
    "knowledge-graph-service",
    "llm-rag-service"
  ],
  "jest": {
    "projects": [
      "<rootDir>/cogni-sync-client/tests"
    ],
    "testMatch": [
      "<rootDir>/cogni-sync-client/tests/**/*.test.ts"
    ],
    "globals": {},
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "rootDir": "."
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1"
  }
}
