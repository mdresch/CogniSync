{
  "name": "@cogni-sync/atlassian-sync-service",
  "version": "1.0.0",
  "description": "Standalone Atlassian Sync Service for CogniSync Platform - Real-time synchronization with Confluence and Jira",
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "docker:build": "docker build -t atlassian-sync-service .",
    "docker:run": "docker run -p 3002:3002 atlassian-sync-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f atlassian-sync-service",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "webhook:test": "tsx scripts/webhook-test.ts"
  },
  "keywords": [
    "atlassian",
    "confluence",
    "jira",
    "webhook",
    "sync",
    "knowledge-graph",
    "cogni-sync",
    "microservice",
    "rest-api",
    "real-time"
  ],
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "crypto": "^1.0.1",
    "node-html-parser": "^6.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.18",
    "@types/compression": "^1.7.5",
    "@types/node": "^22.15.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "prisma": "^6.8.2",
    "rimraf": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdresch/cogni-sync-platform"
  },
  "author": "CogniSync Platform Team",
  "license": "MIT"
}
