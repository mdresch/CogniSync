# CogniSync Knowledge Graph Service Configuration

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/cogni_sync_knowledge_graph"

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SALT=your-api-key-salt-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Multi-tenant Configuration
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_ENABLED=true

# Performance
DB_CONNECTION_POOL_MIN=2
DB_CONNECTION_POOL_MAX=10
DB_TIMEOUT=30000

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Optional: External Services (for future integrations)
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200
