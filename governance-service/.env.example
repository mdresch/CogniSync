# Server Configuration
PORT=3004
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/governance_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (Optional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@cogni-sync.com"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
UPLOAD_PATH="./uploads"
REPORTS_PATH="./reports"
MAX_FILE_SIZE=10485760

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# External Services
ATLASSIAN_SYNC_SERVICE_URL="http://localhost:3002"
KNOWLEDGE_GRAPH_SERVICE_URL="http://localhost:3001"
LLM_RAG_SERVICE_URL="http://localhost:3003"

# Logging
LOG_LEVEL="info"